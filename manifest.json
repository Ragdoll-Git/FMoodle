{
  "manifest_version": 3,
  "name": "Resumen IA de Pantalla",
  "version": "3.0",
  "version_name": "Multimodal",
  "description": "Toma una captura de pantalla, la env√≠a a Gemini o Groq y muestra un resumen.",
  "permissions": [
    "activeTab",
    "contextMenus",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://generativelanguage.googleapis.com/*",
    "https://api.groq.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "options_page": "options.html",
  "commands": {
    "activar-captura": {
      "suggested_key": {
        "default": "Alt+Shift+Z",
        "mac": "MacCtrl+Shift+Z"
      },
      "description": "Capturar pantalla y preguntar a la IA"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}